{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  }
} 